    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:background="#3D230D">
        
	    <TextView
	        android:id="@+id/optionset5_label1"
	        android:padding="5dp"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="Max Keyword Length"
	        android:textSize="18sp"
	        android:textColor="@android:color/white"/>
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

	        <EditText
	            android:id="@+id/optionset5_editText" 
	            android:maxLines="1"
	            android:textSize="22sp"
	            android:inputType="number"
	            android:layout_height="wrap_content"
	            android:layout_width="132dp"
	            android:layout_marginLeft="7dp"
	            android:layout_marginRight="7dp"
	            android:layout_marginBottom="7dp"
	            android:layout_weight="0.50"
	            android:padding="2dp"
	            android:gravity="center_vertical"
	            android:background="#E3B386"/>
	        <Button
	            android:id="@+id/optionset5_minusBtn"
	            android:layout_height="fill_parent"
	            android:layout_width="66dp"
	            android:layout_weight="0.25"
	            android:layout_marginLeft="7dp"
	            android:layout_marginRight="1dp"
	            android:layout_marginBottom="7dp"
	            android:text="-"
	            android:textSize="24sp"
	            android:background="@drawable/picker_button" />
	        <Button
	            android:id="@+id/optionset5_plusBtn"
	            android:layout_height="fill_parent"
	            android:layout_width="66dp"
	            android:layout_weight="0.25"
	          	android:layout_marginBottom="7dp"
	            android:text="+"
	            android:textSize="24sp"
	            android:background="@drawable/picker_button" />
        </LinearLayout>
        
       	<TextView
       	    android:id="@+id/optionset5_label2"
	        android:padding="5dp"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="Friedman Range"
	        android:textSize="18sp"
	        android:textColor="@android:color/white"/>
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

	        <EditText
	            android:id="@+id/optionset5_lowerfriedman" 
	            android:maxLines="1"
	            android:textSize="22sp"
	            android:inputType="number"
	            android:layout_height="wrap_content"
	            android:layout_width="132dp"
	            android:layout_marginLeft="7dp"
	            android:layout_marginRight="7dp"
	            android:layout_marginBottom="7dp"
	            android:layout_weight="0.50"
	            android:padding="2dp"
	            android:gravity="center_vertical"
	            android:background="#E3B386"/>
	        <EditText
	            android:id="@+id/optionset5_upperfriedman"
	            android:maxLines="1"
	            android:textSize="22sp"
	            android:inputType="number"
	            android:layout_height="wrap_content"
	            android:layout_width="132dp"
	            android:layout_marginLeft="7dp"
	            android:layout_marginRight="7dp"
	            android:layout_marginBottom="7dp"
	            android:layout_weight="0.50"
	            android:padding="2dp"
	            android:gravity="center_vertical"
	            android:background="#E3B386"/>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/applyButton"
                android:layout_width="136dp"
                android:layout_height="44dp"
                android:layout_marginRight="1dp"
                android:layout_weight="0.50"
                android:background="@drawable/options_button"
                android:gravity="center"
                android:onClick="onSetOptionsPressed"
                android:text="Apply"
                android:textSize="16sp" />

            <Button
                android:id="@+id/cancelButton"
                android:layout_width="136dp"
                android:layout_height="44dp"
                android:layout_margin="-3dp"
                android:layout_weight="0.50"
                android:background="@drawable/options_button"
                android:gravity="center"
                android:onClick="onActionButtonPressed"
                android:text="Cancel"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>