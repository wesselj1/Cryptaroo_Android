    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:background="#3D230D">
        
	    <TextView
	        android:id="@+id/optionset4_label"
	        android:padding="5dp"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="Label"
	        android:textSize="18sp"
	        android:textColor="@android:color/white"/>

        <EditText
            android:id="@+id/optionset4_editText" 
            android:maxLines="1"
            android:inputType="textNoSuggestions"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="7dp"
            android:padding="2dp"
            android:textSize="22sp"
            android:gravity="center_vertical"
            android:background="#E3B386"/>

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/applyButton"
            android:layout_width="136dp"
            android:layout_height="44dp"
            android:layout_marginRight="1dp"
            android:layout_weight="0.50"
            android:background="@drawable/options_button"
            android:gravity="center"
            android:onClick="onSetOptionsPressed"
            android:text="Apply"
            android:textSize="16sp" />

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="136dp"
            android:layout_height="44dp"
            android:layout_margin="-3dp"
            android:layout_weight="0.50"
            android:background="@drawable/options_button"
            android:gravity="center"
            android:onClick="onActionButtonPressed"
            android:text="Cancel"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>