<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.joeywessel.cryptaroo"
    android:versionCode="1"
    android:versionName="1.1" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="23" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.joeywessel.cryptaroo.MainActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.joeywessel.cryptaroo.CryptTextActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_crypt_text"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="com.joeywessel.cryptaroo.GCDandInverseActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_gcdand_inverse"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.joeywessel.cryptaroo.AboutActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_about"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>