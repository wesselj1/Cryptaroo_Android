<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/window" >
    
        <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:background="@android:color/white">
        
        <TextView
            android:id="@+id/optionset2_label1"
            android:padding="5dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Label:"
            android:textSize="18sp"
            android:textColor="@android:color/darker_gray"/>
        
        <EditText
            android:id="@+id/optionset2_editText"
            android:maxLines="1"
            android:inputType="textNoSuggestions"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="7dp"
            android:padding="2dp"
            android:textSize="22sp"
            android:background="#EEEEEE"
            android:textColor="@color/black_haze" />
        
        <!--  Layout to wrap the label and radio button group -->
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/white">
            
	       <TextView 
	           android:id="@+id/optionset2_label2"
	           android:padding="5dp"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_marginTop="7dp"
	           android:layout_marginBottom="7dp"
	           android:text="Label:"
	           android:textSize="18sp"
	           android:textColor="@android:color/darker_gray"/>
	       
	       <RadioGroup 
	           android:id="@+id/optionset2_radiogroup"
	           android:orientation="horizontal"
	           android:layout_width="156dp"
	           android:layout_height="wrap_content">
	           
	           <RadioButton
	               android:id="@+id/optionset2_radiobtn1"
	               android:layout_weight="0.25"
	               android:text="Yes"
	               android:textSize="18sp"
	               android:textColor="@color/black_haze"
	               android:paddingRight="7dp"/>
	           <RadioButton 
	               android:id="@+id/optionset2_radiobtn2"
	               android:layout_weight="0.25"
	               android:text="No"
	               android:textSize="18sp"
	               android:textColor="@color/black_haze"/>
	       </RadioGroup>
	       
		</LinearLayout>
		<!-- END radio button grouping layout -->
		
		<LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/cancelButton"
                android:layout_width="136dp"
                android:layout_height="44dp"
                android:layout_marginLeft="0dp"
                android:layout_weight="0.50"
                android:background="@drawable/button_selector"
                android:gravity="center"
                android:text="CANCEL"
                android:textSize="30sp"
                android:textColor="@color/wool_white" />

            <View
                android:id="@+id/buttonDivider"
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@color/divider_grey" />

            <Button
                android:id="@+id/applyButton"
                android:layout_width="136dp"
                android:layout_height="44dp"
                android:layout_weight="0.50"
                android:background="@drawable/button_selector"
                android:gravity="center"
                android:text="APPLY"
                android:textSize="30sp"
                android:textColor="@color/wool_white" />
        </LinearLayout>
		
    </LinearLayout>
    

</LinearLayout>