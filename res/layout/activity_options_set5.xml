<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">
    
    <TextView
        android:id="@+id/optionset5_label1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Max Keyword Length"
        android:textColor="@android:color/darker_gray"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/optionset5_editText"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_weight="0.50"
            android:background="#EEEEEE"
            android:gravity="center_vertical"
            android:inputType="number"
            android:maxLines="1"
            android:padding="2dp"
            android:textSize="38sp" />

        <Button
            android:id="@+id/optionset5_minusBtn"
            android:layout_width="66dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="1dp"
            android:layout_weight="0.25"
            android:background="@drawable/picker_button"
            android:text="-"
            android:textColor="#222222"
            android:textSize="38sp" />

        <Button
            android:id="@+id/optionset5_plusBtn"
            android:layout_width="66dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="7dp"
            android:layout_weight="0.25"
            android:background="@drawable/picker_button"
            android:text="+"
            android:textColor="#222222"
            android:textSize="38sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/optionset5_label2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Friedman Range"
        android:textColor="@android:color/darker_gray"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/optionset5_lowerfriedman"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_weight="0.50"
            android:background="#EEEEEE"
            android:gravity="center_vertical"
            android:inputType="number"
            android:maxLines="1"
            android:padding="2dp"
            android:textSize="38sp" />

        <EditText
            android:id="@+id/optionset5_upperfriedman"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_weight="0.50"
            android:background="#EEEEEE"
            android:gravity="center_vertical"
            android:inputType="number"
            android:maxLines="1"
            android:padding="2dp"
            android:textSize="38sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="136dp"
            android:layout_height="44dp"
            android:layout_margin="-3dp"
            android:layout_weight="0.50"
            android:background="@drawable/button_selector"
            android:gravity="center"
            android:onClick="onActionButtonPressed"
            android:text="CANCEL"
            android:textSize="16sp" />
        
        <View
	        android:id="@+id/buttonDivider"
	        android:layout_width="1dp"
	        android:layout_height="fill_parent"
	        android:background="#999999" />

        <Button
            android:id="@+id/applyButton"
            android:layout_width="136dp"
            android:layout_height="44dp"
            android:layout_weight="0.50"
            android:background="@drawable/button_selector"
            android:gravity="center"
            android:onClick="onSetOptionsPressed"
            android:text="APPLY"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>