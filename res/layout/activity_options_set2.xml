        <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:background="#3D230D">
        
        <TextView
            android:id="@+id/optionset2_label1"
            android:padding="5dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Label:"
            android:textSize="18sp"
            android:textColor="@android:color/white"/>
        
        <EditText
            android:id="@+id/optionset2_editText"
            android:maxLines="1"
            android:inputType="textNoSuggestions"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="7dp"
            android:padding="2dp"
            android:textSize="22sp"
            android:background="#E3B386"/>
        
        <!--  Layout to wrap the label and radio button group -->
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#3D230D">
            
	       <TextView 
	           android:id="@+id/optionset2_label2"
	           android:padding="5dp"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_marginTop="7dp"
	           android:layout_marginBottom="7dp"
	           android:text="Label:"
	           android:textSize="18sp"
	           android:textColor="@android:color/white"/>
	       
	       <RadioGroup 
	           android:id="@+id/optionset2_radiogroup"
	           android:orientation="horizontal"
	           android:layout_width="156dp"
	           android:layout_height="wrap_content">
	           
	           <RadioButton
	               android:id="@+id/optionset2_radiobtn1"
	               android:layout_weight="0.25"
	               android:text="Yes"
	               android:textSize="18sp"
	               android:textColor="@android:color/white"
	               android:paddingRight="7dp"/>
	           <RadioButton 
	               android:id="@+id/optionset2_radiobtn2"
	               android:layout_weight="0.25"
	               android:text="No"
	               android:textSize="18sp"
	               android:textColor="@android:color/white"/>
	       </RadioGroup>
	       
		</LinearLayout>
		<!-- END radio button grouping layout -->
		
		<LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal">
	        
	        <Button
	            android:id="@+id/applyButton"
	            android:layout_height="44dp"
	            android:layout_width="136dp"
	            android:layout_weight="0.50"
	            android:layout_marginRight="1dp"
	            android:text="Apply"
	            android:textSize="16sp"
	            android:background="@drawable/options_button"
	            android:gravity="center"
	            android:onClick="onSetOptionsPressed"
	            />
	        <Button
	            android:id="@+id/cancelButton"
	            android:layout_height="44dp"
	            android:layout_width="136dp"
	            android:layout_weight="0.50"
	            android:text="Cancel"
	            android:textSize="16sp"
	            android:background="@drawable/options_button"
	            android:layout_margin="-3dp"
	            android:gravity="center"
	            android:onClick="onActionButtonPressed"
	            />
	    </LinearLayout>
		
    </LinearLayout>
    

</LinearLayout>