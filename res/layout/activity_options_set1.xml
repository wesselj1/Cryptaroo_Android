    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_margin="0dp"
        android:orientation="vertical"
        android:background="#3D230D">
        
	    <TextView
	        android:id="@+id/optionset1_label"
	        android:padding="5dp"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="Label:"
	        android:textSize="18sp"
	        android:textColor="@android:color/white"/>
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

	        <EditText
	            android:id="@+id/optionset1_editText" 
	            android:maxLines="1"
	            android:inputType="number"
	            android:layout_height="wrap_content"
	            android:layout_width="120dp"
	            android:layout_marginLeft="7dp"
	            android:layout_marginRight="7dp"
	            android:layout_marginBottom="7dp"
	            android:layout_weight="0.50"
	            android:padding="2dp"
	            android:gravity="center_vertical"
	            android:background="#E3B386"
	            android:textSize="22sp"/>
	        <Button
	            android:id="@+id/optionset1_minusButton"
	            android:layout_height="match_parent"
	            android:layout_width="64dp"
	            android:layout_weight="0.25"
	            android:layout_marginRight="1dp"
	            android:layout_marginBottom="7dp"
	            android:text="-"
	            android:textSize="24sp"
	            android:background="@drawable/picker_button" />
	        <Button
	            android:id="@+id/optionset1_plusButton"
	            android:layout_height="match_parent"
	            android:layout_width="64dp"
	            android:layout_weight="0.25"
	          	android:layout_marginBottom="7dp"
	          	android:layout_marginRight="7dp"
	            android:text="+"
	            android:textSize="24sp"
	            android:background="@drawable/picker_button" />
        </LinearLayout>
        
	   <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal">
	        
	        <Button
	            android:id="@+id/applyButton"
	            android:layout_height="44dp"
	            android:layout_width="136dp"
	            android:layout_weight="0.50"
	            android:layout_marginRight="1dp"
	            android:text="Apply"
	            android:textSize="16sp"
	            android:background="@drawable/options_button"
	            android:gravity="center"
	            android:onClick="onSetOptionsPressed"
	            />
	        <Button
	            android:id="@+id/cancelButton"
	            android:layout_height="44dp"
	            android:layout_width="136dp"
	            android:layout_weight="0.50"
	            android:text="Cancel"
	            android:textSize="16sp"
	            android:background="@drawable/options_button"
	            android:layout_margin="-3dp"
	            android:gravity="center"
	            android:onClick="onActionButtonPressed"
	            />
	    </LinearLayout>

    </LinearLayout>

</LinearLayout>